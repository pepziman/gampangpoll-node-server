 <!DOCTYPE html>
  <html>
    <head>
      <!--Import materialize.css-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.0/css/materialize.min.css">
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
      <!--Import jQuery before materialize.js-->
      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
       <!-- Compiled and minified JavaScript -->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.0/js/materialize.min.js"></script>
      
    </head>

    <body>
       
       <nav class="#4db6ac teal lighten-2">
        <div class="nav-wrapper">
          <a href="#" class="brand-logo">&nbsp GampangPoll</a>
          <!-- Dropdown Trigger -->
          <div class="right-align" style="margin-right:10px;">
            <a class='dropdown-button btn-flat white-text' href='#' data-activates='menu'><b>Admin</b></a>
          </div>
          <!-- Dropdown Structure -->
          <ul id='menu' class='dropdown-content'>
            
            <li><a href="/logout" class="#f44336 red-text"><b>Sign Out</b></a></li>
          </ul>
        </div>
      </nav>

      </br>
        
      <div class="container col s10">
         
        <form action="/admin/user/save/:user_id" method="POST" id="create_poll">
          <br/>            
          <fieldset>
              <input name="id" type="text" placeholder="edit your ID here" value="<%= user.id_user %>" />
              <input name="nama" type="text"  placeholder="edit your name here" value="<%= user.name %>" />
              <input name="email" type="email" placeholder="edit your email here" value="<%= user.local.email %>" />
              <input name="localname" type="text" placeholder="edit your local ID here" value="<%= user.local.name %>" />
              <input name="pass" type="password" placeholder="enter your new password"/>
          </fieldset>
              
          <br>
          <button type="submit" class="btn waves-effect waves-light">Save</button>
        </form>

      </div>
           
    </body>
  </html>